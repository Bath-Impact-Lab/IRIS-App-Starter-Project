{
  "name": "iris-electron-starter",
  "version": "0.1.0",
  "description": "Electron starter app for IRIS with Three.js and camera selection UI",
  "main": "electron/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build:renderer": "vite build",
    "build": "npm run build:renderer && electron-builder --win --x64",
    "start": "electron .",
    "lint": "echo 'No linter configured'"
  },
  "dependencies": {
    "three": "^0.169.0",
    "vue": "^3.5.10"
  },
  "devDependencies": {
    "@electron/notarize": "^2.3.0",
    "@types/node": "^22.7.5",
    "@types/three": "^0.180.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^38.3.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.6.2",
    "vite": "^7.0.0",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.bath-impact-lab.iris-starter",
    "productName": "IRIS Starter",
    "files": [
      "dist/**",
      "electron/**"
    ],
    "extraResources": [
      {
        "from": "public/assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  }
}
